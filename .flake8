[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    lm-polygraph,
    build,
    dist,
    outputs,
    .venv,
    venv,
    llm_tts/evaluation/latex2sympy
per-file-ignores =
    __init__.py:F401
    tests/deepconf/test_deepconf_accurate.py:E402
    tests/deepconf/test_deepconf_math.py:E402
